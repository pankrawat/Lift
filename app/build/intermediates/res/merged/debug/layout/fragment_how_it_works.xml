<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/dph10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/offerer_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dpw20"
            android:layout_marginRight="@dimen/dpw10"
            android:layout_weight="1"
            android:background="@drawable/red_back_shape"
            android:gravity="center"
            android:text="Lift Offerer"
            android:textColor="@color/white"
            android:textSize="@dimen/sp14" />

        <TextView
            android:id="@+id/requester_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dpw10"
            android:layout_marginRight="@dimen/dpw20"
            android:layout_weight="1"
            android:background="@drawable/red_back_shape"
            android:gravity="center"
            android:text="Lift Requester"
            android:textColor="@color/white"
            android:textSize="@dimen/sp14" />

    </LinearLayout>

    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dph2"
        android:layout_below="@+id/line"
        android:background="#e42a2a" />

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/line2" />

</RelativeLayout>
