<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/linear_parent"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/ce0e0e0"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dph40"
        android:background="@color/darkGreen">

        <RelativeLayout
            android:id="@+id/drawerIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:paddingBottom="@dimen/dph10"
                android:paddingLeft="@dimen/dpw10"
                android:paddingRight="@dimen/dpw10"
                android:paddingTop="@dimen/dph10"
                android:src="@mipmap/menu"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_header"
            fontPath="@string/font_bold"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dpw50"
            android:layout_marginRight="@dimen/dpw50"
            android:gravity="center"
            android:text="Contact Us"
            android:textColor="@color/white"
            android:textSize="@dimen/sp20"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dph20"
                android:paddingLeft="@dimen/dpw20"
                android:paddingRight="@dimen/dpw20"
                android:paddingTop="@dimen/dph20">

                <LinearLayout
                    android:id="@+id/linear_container"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dph60"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dpw10"
                    android:paddingRight="@dimen/dpw10">

                    <ImageView
                        android:layout_width="@dimen/dpw20"
                        android:layout_height="@dimen/dph20"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/call_2"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dpw10"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dph5"
                            android:layout_marginLeft="@dimen/dpw10"
                            android:layout_marginTop="@dimen/dph5"
                            android:text="@string/contact_us_mobile1"
                            android:textSize="@dimen/sp14"/>

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dpw10"
                            android:text="@string/contact_us_mobile2"
                            android:textSize="@dimen/sp14"/>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="@dimen/dpw240"
                    android:layout_height="@dimen/dph0.5"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/black">

                </View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dph60"
                    android:background="@color/white"
                    android:dividerPadding="@dimen/dpw10"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dpw10"
                    android:paddingRight="@dimen/dpw10">

                    <ImageView
                        android:layout_width="@dimen/dpw20"
                        android:layout_height="@dimen/dph20"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/mail"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dpw10"
                        android:gravity="center_vertical"
                        android:text="@string/contact_us_email"
                        android:textSize="@dimen/sp14"/>


                </LinearLayout>

                <View

                    android:layout_width="@dimen/dpw240"
                    android:layout_height="@dimen/dph0.5"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/black"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dph60"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dpw10"
                    android:paddingRight="@dimen/dpw10">

                    <ImageView
                        android:layout_width="@dimen/dpw20"
                        android:layout_height="@dimen/dph20"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/web"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dpw10"
                        android:gravity="center_vertical"
                        android:text="www.liftindia.co"
                        android:textSize="@dimen/sp14"/>


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.72"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dpw20"
                android:paddingRight="@dimen/dpw20">

                <EditText
                    android:id="@+id/et_email"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dph35"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/shape"
                    android:hint="Comment"
                    android:paddingLeft="@dimen/dpw10"
                    android:paddingRight="@dimen/dpw10"
                    android:textSize="@dimen/sp14"/>

                <Button
                    android:id="@+id/button"
                    android:layout_width="@dimen/dpw130"
                    android:layout_height="@dimen/dph35"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dph20"
                    android:background="@drawable/rounded_corner_2"
                    android:text="Send Message"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp14"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.28"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="10">

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"/>

                <ImageView
                    android:id="@+id/iv_fb"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dph35"
                    android:layout_weight="2.5"
                    android:src="@mipmap/fb_green"/>

                <ImageView
                    android:id="@+id/iv_twitter"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dph35"
                    android:layout_weight="2.5"
                    android:src="@mipmap/twitter"/>

                <ImageView
                    android:id="@+id/iv_in"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dph35"
                    android:layout_weight="2.5"
                    android:src="@mipmap/in_green"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>

