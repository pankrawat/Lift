        <TextView
            android:id="@+id/tv_seats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_age"
            android:layout_alignStart="@+id/tv_age"
            android:layout_below="@+id/tv_age"
            android:layout_marginTop="@dimen/dph8"
            android:text="No. Of Seats - "
            android:textColor="@color/black"
            android:textSize="@dimen/sp12" />

        <TextView
            android:id="@+id/seat_text"
            fontPath="@string/font_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/view2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/dpw5"
            android:textColor="@color/black"
            android:textIsSelectable="false"
            android:textStyle="bold" />

        <View
            android:id="@+id/view2"
            android:layout_width="0.3dp"
            android:layout_height="80dp"
            android:layout_below="@+id/textView15"
            android:layout_marginEnd="@dimen/dpw15"
            android:layout_marginRight="@dimen/dpw15"
            android:layout_toLeftOf="@+id/tv_profile"
            android:layout_toStartOf="@+id/tv_profile"
            android:background="@color/black" />

        <TextView
            android:id="@+id/time_text"
            fontPath="@string/font_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_name"
            android:textColor="@color/black"
            android:textSize="@dimen/sp12"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_profile"
            android:layout_alignStart="@+id/tv_profile"
            android:layout_alignTop="@+id/tv_seats"
            android:text="You Rated:"
            android:textSize="@dimen/sp12" />

        <RatingBar
            android:id="@+id/ratingBar"
            style="@style/GreenRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_toEndOf="@+id/view2"
            android:layout_toRightOf="@+id/view2"
            android:isIndicator="true"
            android:numStars="5"
            android:stepSize="1" />

        <TextView
            android:id="@+id/tv_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="38dp"
            android:layout_marginRight="38dp"
            android:layout_marginTop="@dimen/dph8"
            android:background="#fd0303"
            android:paddingBottom="@dimen/dph5"
            android:paddingLeft="@dimen/dpw5"
            android:paddingRight="@dimen/dpw5"
            android:paddingTop="@dimen/dph5"
            android:singleLine="false"
            android:text="Full Profile"
            android:textColor="@color/white"
            android:textSize="@dimen/sp12" />

        <TextView
            android:id="@+id/tv_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_age"
            android:layout_alignBottom="@+id/tv_age"
            android:layout_toEndOf="@+id/tv_age"
            android:layout_toRightOf="@+id/tv_age"
            android:textColor="@color/black"
            android:textSize="@dimen/sp12" />

