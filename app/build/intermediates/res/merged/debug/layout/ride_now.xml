<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dph10"
    android:paddingLeft="@dimen/dpw10"
    android:paddingRight="@dimen/dpw10"
    android:paddingTop="@dimen/dph10">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Thanks for sharing your ride"
            android:textColor="@color/black"
            android:textSize="@dimen/sp15" />

        <ImageView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="@dimen/dpw4"
            android:paddingLeft="@dimen/dpw4"
            android:paddingRight="@dimen/dpw4"
            android:paddingTop="@dimen/dpw4"
            android:src="@mipmap/red" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dph15"
        android:paddingBottom="@dimen/dph10"
        android:paddingLeft="@dimen/dpw10"
        android:paddingRight="@dimen/dpw10"
        android:paddingTop="@dimen/dph10"
        android:text="We will notify you here as well as via  sms  as soon as someone request within your route."
        android:textSize="@dimen/sp13" />

</LinearLayout>