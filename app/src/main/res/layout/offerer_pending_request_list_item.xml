<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dph160"
    android:layout_marginBottom="@dimen/dph5"
    android:layout_marginLeft="@dimen/dpw5"
    android:layout_marginRight="@dimen/dpw5"
    android:layout_marginTop="@dimen/dph5"
    card_view:cardCornerRadius="@dimen/dpw4">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/offerer_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dpw10"
            android:layout_marginRight="@dimen/dpw10"
            android:textSize="@dimen/sp14" />

        <LinearLayout
            android:id="@+id/main_c"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dph40"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dph10"
            android:weightSum="1">

            <TextView
                android:id="@+id/date_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dpw10"
                android:layout_marginRight="@dimen/dpw10"
                android:layout_weight="1"
                android:alpha="0.5"
                android:singleLine="true"
                android:text="4th May, 2017 12:12 am"
                android:textColor="@color/black"
                android:textSize="@dimen/sp10" />

            <Button
                android:id="@+id/edit_details"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="@dimen/dpw60"
                android:layout_height="@dimen/dph20"
                android:layout_marginRight="@dimen/dpw3"
                android:layout_weight="2"
                android:background="@drawable/edit_button_shape"
                android:text="Edit"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/sp11" />

            <Button
                android:id="@+id/delete_details"
                android:layout_width="@dimen/dpw60"
                android:layout_height="@dimen/dph20"
                android:layout_marginLeft="@dimen/dpw3"
                android:layout_marginRight="@dimen/dpw8"
                android:layout_weight="2"
                android:background="@drawable/delete"
                android:text="Delete"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/sp11" />

            <Button
                android:id="@+id/btn_re_request"
                android:layout_width="@dimen/dpw80"
                android:layout_height="@dimen/dph20"
                android:layout_marginLeft="@dimen/dpw3"
                android:layout_marginRight="@dimen/dpw8"
                android:layout_weight="2"
                android:background="@drawable/edit_button_shape"
                android:text="Re-Request"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/sp11" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dpw10"
            android:paddingRight="@dimen/dpw10">

            <ImageView
                android:layout_width="@dimen/dpw20"
                android:layout_height="@dimen/dph20"
                android:layout_gravity="center"
                android:src="@mipmap/mark" />

            <TextView
                android:id="@+id/from_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dph5"
                android:paddingTop="@dimen/dph5"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/sp16" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dpw10"
            android:paddingRight="@dimen/dpw10">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dph1"
                android:background="#aea8a8" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/to_location_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dpw10">

            <ImageView
                android:layout_width="@dimen/dpw20"
                android:layout_height="@dimen/dph20"
                android:layout_gravity="center"
                android:src="@mipmap/flag" />

            <TextView
                android:id="@+id/to_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dph5"
                android:paddingTop="@dimen/dph5"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/sp16" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dph5"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dph5">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dpw30"
                android:layout_marginRight="@dimen/dpw80"
                android:background="@drawable/border"
                android:gravity="left|center_vertical">

                <TextView
                    android:id="@+id/price_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dpw5"
                    android:layout_marginRight="@dimen/dpw5"
                    android:drawableLeft="@mipmap/rup"
                    android:text="/KM"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp14" />

                <View
                    android:id="@+id/ln1"
                    android:layout_width="@dimen/dpw1"
                    android:layout_height="@dimen/dph30"
                    android:layout_toRightOf="@+id/price_details"
                    android:background="@color/lightGreen" />

                <TextView
                    android:id="@+id/seat_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dpw5"
                    android:layout_marginRight="@dimen/dpw5"
                    android:layout_toRightOf="@+id/ln1"
                    android:gravity="center"
                    android:text=" Seats"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp14" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dpw8">

                <Button
                    android:id="@+id/view_details"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="@dimen/dpw60"
                    android:layout_height="@dimen/dph20"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="end|center"
                    android:background="@drawable/view"
                    android:text="View"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp11" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
