<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/dph5"
    android:paddingLeft="@dimen/dpw5"
    android:paddingRight="@dimen/dpw5"
    android:paddingTop="@dimen/dph5">
    <!--<RadioButton-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_gravity="center_vertical"-->
    <!--android:layout_weight="7"/>-->

    <ImageView
        android:id="@+id/checkbox"
        android:layout_width="@dimen/dpw15"
        android:layout_height="@dimen/dpw15"
        android:layout_marginLeft="@dimen/dph5"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/uncheck" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dph5"
        android:paddingLeft="@dimen/dpw5"
        android:paddingRight="@dimen/dpw5">

        <TextView
            android:id="@+id/tv_carName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="4 Wheeler -  Maruti Alto"
            android:textSize="@dimen/sp14" />

        <TextView
            android:id="@+id/tv_rcNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DL - 46 - AJ 4340"
            android:textSize="@dimen/sp14" />
    </LinearLayout>
</LinearLayout>