<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/dph10"
    android:paddingLeft="@dimen/dpw10"
    android:paddingRight="@dimen/dpw10"
    android:paddingTop="@dimen/dph10"
    android:weightSum="4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dpw5">

        <TextView
            android:id="@+id/tv_date_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dph3"
            android:text="2 Jan,15 04:06 PM"
            android:textColor="@color/black"
            android:textSize="@dimen/sp14" />

        <TextView
            android:id="@+id/tv_source"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dph3"
            android:text="Laxmi Nagar, Delhi"
            android:textColor="@color/black"
            android:textSize="@dimen/sp14" />

        <TextView
            android:id="@+id/tv_destination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dph3"
            android:text="to Sector-58, Noida"
            android:textColor="@color/black"
            android:textSize="@dimen/sp14" />

        <TextView
            android:id="@+id/tv_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dph3"
            android:text="Successfully, Completed"
            android:textColor="@color/black"
            android:textSize="@dimen/sp14" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_rupee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dph5"
            android:layout_marginTop="@dimen/dph5"
            android:drawableLeft="@mipmap/rupeee"
            android:gravity="center_horizontal"
            android:text="36.00"
            android:textColor="@color/black"
            android:textSize="@dimen/sp20" />

        <TextView
            android:id="@+id/tv_credit_pending"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Credited\npending"
            android:textColor="@color/black"
            android:textSize="@dimen/sp14" />
    </LinearLayout>

</LinearLayout>