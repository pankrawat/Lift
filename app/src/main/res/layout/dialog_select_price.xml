<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dph35"
        android:background="#017060"
        android:orientation="horizontal"
        android:weightSum="5">

        <TextView
            android:id="@+id/tv_head"
            fontPath="@string/font_bold"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dpw20"
            android:text="Select Price"
            android:textColor="@color/white"
            android:textSize="@dimen/sp16" />

        <RelativeLayout
            android:id="@+id/rl_cancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:paddingBottom="@dimen/dph5"
                android:paddingLeft="@dimen/dpw5"
                android:paddingRight="@dimen/dpw5"
                android:paddingTop="@dimen/dph5"
                android:src="@mipmap/white" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/groupId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dpw10"
        android:paddingRight="@dimen/dpw10">

        <TextView

            android:id="@+id/one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dph10"
            android:tag="1"
            android:text="1/km"
            android:textColor="@color/black"
            android:textSize="@dimen/sp15" />

        <TextView

            android:id="@+id/two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dph10"
            android:tag="2"
            android:text="2/km"
            android:textColor="@color/black"
            android:textSize="@dimen/sp15" />

        <TextView

            android:id="@+id/three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dph10"
            android:tag="3"
            android:text="3/km"
            android:textColor="@color/black"
            android:textSize="@dimen/sp15" />


        <TextView

            android:id="@+id/four"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dph10"
            android:tag="4"
            android:text="4/km"
            android:textColor="@color/black"
            android:textSize="@dimen/sp15" />
    </LinearLayout>

</LinearLayout>