<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ce0e0e0"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dph35"
        android:background="@color/darkGreen"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/textView11"
            fontPath="@string/font_bold"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dpw15"
            android:text="Lift Request"
            android:textColor="@color/white"
            android:textSize="@dimen/sp16" />

        <RelativeLayout
            android:id="@+id/rl_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:paddingBottom="@dimen/dph15"
                android:paddingLeft="@dimen/dpw15"
                android:paddingRight="@dimen/dpw15"
                android:paddingTop="@dimen/dph15"
                android:src="@mipmap/white" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dph10"
        android:layout_marginLeft="@dimen/dpw15"
        android:layout_marginRight="@dimen/dpw15"
        android:layout_marginTop="@dimen/dph15"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Rahul Gupta"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/darkGreen"
                android:textSize="@dimen/sp16" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dph5"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="5">

                <TextView
                    android:id="@+id/tv_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="23 Y"
                    android:textSize="@dimen/sp14" />

                <View
                    android:layout_width="@dimen/dpw0.5"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dpw5"
                    android:layout_marginRight="@dimen/dpw5"
                    android:background="@color/black"
                    android:minHeight="50dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RatingBar
                        android:id="@+id/ratingBar"
                        style="@style/GreenRatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:isIndicator="true"
                        android:numStars="5"
                        android:stepSize="0.1" />

                    <TextView
                        android:id="@+id/tv_reviews"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/dph2"
                        android:paddingLeft="@dimen/dpw2"
                        android:paddingRight="@dimen/dpw2"
                        android:singleLine="true"
                        android:textColor="@color/c5d5d5d"
                        android:textSize="@dimen/sp11" />

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>


        <Button
            android:id="@+id/btn_confirmed"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dph30"
            android:layout_gravity="center"
            android:background="@drawable/button_shape"
            android:gravity="center"
            android:paddingLeft="@dimen/dpw5"
            android:paddingRight="@dimen/dpw5"
            android:text="Confirmed"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/sp12" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dpw15"
        android:layout_marginRight="@dimen/dpw15"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_vehicle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/car_right" />

        <TextView
            android:id="@+id/tv_car_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:text="dfvdvsdvdxfbxdf"
            android:textSize="@dimen/sp12" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_car_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dpw50"
        android:layout_marginRight="@dimen/dpw15"
        android:text="HR34DS344"
        android:textSize="@dimen/sp14" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dpw15"
        android:layout_marginRight="@dimen/dpw15"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_seats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:text="Seats Requested- 34"
                android:textColor="@color/black"
                android:textSize="@dimen/sp12" />

            <TextView
                android:id="@+id/tv_eta"
                fontPath="@string/font_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="ETA - 5 Mins"
                android:textColor="@color/black"
                android:textSize="@dimen/sp12"
                android:textStyle="bold" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dph30"
            android:layout_gravity="center"
            android:background="@drawable/change_button_shape"
            android:paddingLeft="@dimen/dpw5"
            android:paddingRight="@dimen/dpw5"
            android:text="Cancel Lift"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/sp12" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dph1"
        android:layout_marginLeft="@dimen/dpw15"
        android:layout_marginRight="@dimen/dpw15"
        android:layout_marginTop="@dimen/dph5"
        android:background="#b1aeae" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            fontPath="@string/font_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dph5"
            android:text="Request is confirmed"
            android:textColor="@color/black"
            android:textSize="@dimen/sp14"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="@dimen/dpw25"
            android:paddingRight="@dimen/dpw25"
            android:paddingTop="@dimen/dph5"
            android:text=" Start your ride only when you board the lift. Your fare meter starts once you press start now."
            android:textAlignment="center"
            android:textColor="#515050"
            android:textSize="@dimen/sp14" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dph1"
        android:layout_marginLeft="@dimen/dpw15"
        android:layout_marginRight="@dimen/dpw15"
        android:layout_marginTop="@dimen/dph5"
        android:background="#b1aeae" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dph15"
        android:layout_marginLeft="@dimen/dpw15"
        android:layout_marginRight="@dimen/dpw15"
        android:layout_marginTop="@dimen/dph10"
        android:orientation="horizontal"
        android:weightSum="3">


        <Button
            android:id="@+id/btn_msg"
            android:layout_width="0dp"
            android:layout_height="@dimen/dph30"
            android:layout_marginRight="@dimen/dpw10"
            android:layout_weight="1"
            android:background="@drawable/yellow_button"
            android:singleLine="true"
            android:text="Message"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/sp12" />

        <Button
            android:id="@+id/btn_call"
            android:layout_width="0dp"
            android:layout_height="@dimen/dph30"
            android:layout_weight="1"
            android:background="@drawable/blue_button"
            android:singleLine="true"
            android:text="Call"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/sp12" />

        <Button
            android:id="@+id/btn_start_now"
            android:layout_width="0dp"
            android:layout_height="@dimen/dph30"
            android:layout_marginLeft="@dimen/dpw10"
            android:layout_weight="1"
            android:background="@drawable/button_shape"
            android:singleLine="true"
            android:text="Start Now"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/sp12" />

    </LinearLayout>

</LinearLayout>