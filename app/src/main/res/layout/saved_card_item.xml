<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dpw30"
    android:layout_marginRight="@dimen/dpw10"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/cardNumber"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@mipmap/visa"
            android:drawablePadding="@dimen/dpw5"
            android:gravity="center"
            android:paddingBottom="@dimen/dpw5"
            android:paddingTop="@dimen/dpw5"
            android:text="4029 8502 75465 2165"
            android:textSize="@dimen/textsize_12" />


        <ImageView
            android:id="@+id/arrow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dph10"
            android:layout_marginRight="@dimen/dph10"
            android:src="@mipmap/expand_arrow" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/cvvLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dph10"
            android:src="@mipmap/cvv" />

        <EditText
            android:id="@+id/cvv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:hint="CVV"
            android:inputType="numberPassword"
            android:maxLength="3"
            android:paddingBottom="@dimen/dpw5"
            android:paddingLeft="@dimen/dpw5"
            android:paddingRight="@dimen/dpw5"
            android:paddingTop="@dimen/dpw5"
            android:textSize="@dimen/textsize_12" />
    </LinearLayout>

</LinearLayout>